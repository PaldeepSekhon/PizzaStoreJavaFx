<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sophmeth_proj4.CurrentOrderController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Current Order" style="-fx-font-size: 20px;"/>

    <HBox spacing="10">
        <Label text="Order Number:"/>
        <Label fx:id="orderNumberLabel"/>
    </HBox>

    <ListView fx:id="orderItemsListView" VBox.vgrow="ALWAYS"/>

    <GridPane hgap="10" vgap="5">
        <Label text="Subtotal: $" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="subtotalLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Tax (6.625%): $" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="taxLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Total: $" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="totalLabel" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Remove Selected Pizza" onAction="#handleRemoveSelected"/>
        <Button text="Clear Order" onAction="#handleClearOrder"/>
        <Button text="Place Order" onAction="#handlePlaceOrder"/>
        <Button text="Back to Main Menu" onAction="#handleBackToMain"/>
    </HBox>
</VBox>
